{
  "settings": {
    "number_of_shards": %%CONF_SHARDS%%,
    "number_of_replicas": %%REPLICAS%%
  },
  "mappings": {
    "_meta": {
      "version": "%%VERSION%%",
      "name": "%%PREFIX%%"
    },
    "dynamic": "strict",
    "properties": {
      "id": {
        "type": "keyword", "ignore_above": 64
      },
      "password": {
        "type": "keyword"
      },
      "full_name": {
        "type": "keyword"
      },
      "email": {
        "type": "keyword"
      },
      "roles": {
        "type": "keyword"
      },
      "disabled": {
        "type": "boolean"
      },
      "expiration_timestamp": {
        "type": "long"
      },
      "preference": {
        "dynamic": "true",
          "type": "object",
          "enabled": false
      }
    }
  },
  "aliases": {
    "%%ALIAS%%": {}
  }
}
