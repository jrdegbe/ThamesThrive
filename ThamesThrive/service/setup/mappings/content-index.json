{
  "settings": {
    "number_of_shards": %%CONF_SHARDS%%,
    "number_of_replicas": %%REPLICAS%%
  },
  "mappings": {
    "_meta": {
      "version": "%%VERSION%%",
      "name": "%%PREFIX%%"
    },
    "dynamic": "strict",
    "properties": {
      "id": {
        "type": "keyword",
        "ignore_above": 48
      },
      "profile": {
        "properties": {
            "id": {
              "type": "keyword"
            }
        }
      },
      "timestamp": {
        "type": "date"
      },
      "type": {
        "type": "keyword"
      },
      "url": {
        "type": "keyword"
      },
      "source": {
        "type": "keyword"
      },
      "author": {
        "type": "keyword",
        "ignore_above": 96
      },
      "copyright": {
        "type": "keyword"
      },
      "content": {
        "type": "binary"
      },
      "text": {
        "type": "text"
      },
      "properties": {
        "type": "flattened"
      },
      "traits": {
        "type": "object",
        "dynamic": "true"
      }
    }
  },
  "aliases": {
    "%%ALIAS%%": {}
  }
}
